    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (remote console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "publish",
            "program": "/home/pi/code/hello-world/RaspberryPiHelloWorld",
            "args": [],
            "cwd": "/home/pi/code/hello-world",
            "stopAtEntry": true,
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "/usr/bin/ssh",
                "pipeArgs": [
                    "pi"
                ],
                "debuggerPath": "/home/pi/vsdbg/vsdbg"
           }
        }
    ]
}